{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/ts",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2015",
      "dom",
      "esnext"
    ],
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./.cache",
    "skipLibCheck": true,
    // "paths": {
    //   "@third-party/*": [
    //     "../third-party/*"
    //   ]
    // },
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}